# Core runtime environment (example)
# Copy to: /etc/alona/core.env 

# Phoenix / Web (LAN-only: bind to 0.0.0.0 so it's reachable on LAN)
PHX_SERVER=true
PHX_HOST=alona.local
PORT=4000
PHX_BIND_IP=0.0.0.0

# Required by Phoenix releases
SECRET_KEY_BASE=CHANGE_ME

# SQLite
DATABASE_PATH=/var/lib/alona/db/alona.sqlite3

# MQTT (core can use localhost even if broker listens on LAN)
MQTT_HOST=127.0.0.1
MQTT_PORT=1883
MQTT_USERNAME=alona-core
MQTT_PASSWORD=CHANGE_ME

# Optional: timezone/logging
TZ=Europe/Athens
